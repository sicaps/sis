<% @page_title= 'Modifier Produit' %>

<%= link_to("<< Back to List", {:controller => 'dim_produits', :action => 'list'}, :class => 'back-link') %>

<div class="subject edit">
  <h3>Modifier un enregistrement de la table dim_produits à partir de stg_produit</h3>

  <%= form_for(:stg_produit, :url => {:action => 'update', :id => @stg_produit.id}) do |f| %>
  
    <table summary="Dim_produit form fields">
      <tr>
        <th>Code</th>
        <td><%= f.text_field(:product_code) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:product_name) %></td>
      </tr>
      <tr>
        <th>Catégorie</th>
        <td><%= f.text_field(:product_category) %></td>
      </tr>

    </table>
    
    <div class="form-buttons">
      <%= submit_tag("Modifier Dim_produits") %>
    </div>
    
  <% end %>
</div>
